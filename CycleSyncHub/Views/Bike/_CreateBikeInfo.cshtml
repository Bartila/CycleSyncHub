@model CycleSyncHub.Application.BikeInfo.Commands.CreateBikeInfoCommand

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createBikeInfoModal">
    Add Bike Info
</button>

<!-- Modal -->
<div class="modal fade" id="createBikeInfoModal" tabindex="-1" aria-labelledby="createBikeInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreateBikeInfo">
                <div class="modal-header">
                    <h5 class="modal-title" id="createBikeInfoModalLabel">Create new bike info</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="BikeEncodedName" class="form-control" type="hidden" />

                    <div class="form-group">
                        <label asp-for="Info" class="control-label"></label>
                        <input asp-for="Info" class="form-control" />
                        <span asp-validation-for="Info" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cost" class="control-label"></label>
                        <input asp-for="Cost" class="form-control" />
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
